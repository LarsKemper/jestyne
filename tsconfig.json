{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "types": ["node"],
    "target": "es5",
    "lib": ["dom", "dom.iterable", "es5"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "incremental": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
